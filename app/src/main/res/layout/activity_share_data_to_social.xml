<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_btn_facebook_normal">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/dwe_logo_white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <LinearLayout
        android:id="@+id/uparLayout"
        android:layout_below="@+id/logoImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Welcome"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/main_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="User name"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/main_email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_name_txt"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_accent"
            android:textSize="16sp"
            android:text="Mail id" />


        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_name_txt"
            android:layout_marginTop="5dp"
            android:textColor="@color/color_accent"
            android:textSize="16sp"
            android:text="Date Of Birthday:-" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:gravity="center">

        <Button
            android:id="@+id/main_fb_share_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/bg_btn_google_plus_pressed"
            android:gravity="center"
            android:text="Share to fb"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/main_linked_in_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/main_fb_share_button"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/bg_btn_linked_in_pressed"
            android:gravity="center"
            android:text="@string/share_twitter"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/shareButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/main_linked_in_sign_in_button"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/bg_btn_linked_in_pressed"
            android:gravity="center"
            android:text="Share"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/LogoutB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_linked_in_sign_in_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="115dp"
            android:text="Logout" />

    </RelativeLayout>
</RelativeLayout>
